@model IEnumerable<web_lab1_fandom.Models.Casts>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstAppereance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastAppereance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Series)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstAppereance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastAppereance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Series.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Actor.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Character.ID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

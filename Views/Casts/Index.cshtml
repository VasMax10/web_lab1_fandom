@model IEnumerable<web_lab1_fandom.Models.Casts>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/flipCard.css" />

<style media="screen">
    body {
        background-image: url( @ViewBag.backImg );
        height: 100%;
        background-attachment: fixed;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>
<script>
    function Change() {
        if ((Boolean)(@ViewBag.backImg) == false) {
            document.body.style.backgroundImage = "url(/img/mainBack.jpg)";
        }      
    }
</script>
<body onload="Change()"></body>
<h1>Cast of "@ViewBag.SeriesName"</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row mb-4 wow fadeIn justify-content-center">
    @foreach (var item in Model)
    {
        <div class="flip-card card mb-3" style="display: inline-block; margin:10px">
            <div class="flip-card-inner">
                <div class="flip-card-front">
                    <img class="card-img-top" src="@item.Actor.Photo" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.Actor.Name</h5>
                    </div>
                </div>
                <div class="flip-card-back">
                    <img class="card-img-top flip-img" src="@item.Character.Photo" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.Character.Name</h5>
                        <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-info">Info</a>
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-secondary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }

</div>



